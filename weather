print("Where do you live?")
location = input()
weather = input()
print("In", location, "the weather is", weather)
if location == "istanbul" and weather == "cloudy":
  advice = "No sunglasses"
elif weather == "rainy":
  advice = "Get an umbrella"
elif weather == "snowy":
  advice = "Mittens and earmuffs"
else:
  advice = "No particular advice"
print(advice)
